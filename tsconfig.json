{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["webpack.config.js", ".prettierrc.js", ".eslintrc.js"],
  "include": ["./src/**/*", "./tests/**/*"]
}
